apiVersion: v1
metadata:
  creationTimestamp: null
  name: {{ cluster_name }}
baseDomain: {{ base_domain }}
compute:
  - architecture: amd64
    hyperthreading: Enabled
    name: worker
    platform:
      aws:
        type: {{ worker_type }}
    replicas: {{ worker_count }}
controlPlane:
  architecture: amd64
  hyperthreading: Enabled
  name: master
  platform:
    aws:
      type: {{ control_plane_type }}
  replicas: {{ control_plane_count }}
networking:
  clusterNetwork:
    - cidr: 10.128.0.0/14
      hostPrefix: 23
  machineNetwork:
    - cidr: 10.0.0.0/16
  networkType: OVNKubernetes
  serviceNetwork:
    - 172.30.0.0/16
platform:
  aws:
    region: {{ region }}
publish: External
additionalTrustBundlePolicy: Proxyonly
pullSecret: '{{ pull_secret }}'
sshKey: '{{ ssh_key }}'